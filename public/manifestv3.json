{
    "name": "Carbon Voyage",
    "description": "Your way to make online purchases carbon-neutral.",
    "version": "1.0.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html",
        "default_title": "Carbon Voyage"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.amazon.com/*",
                "https://amazon.com/*",
                "https://www.walmart.com/*",
                "https://walmart.com/*",
                "https://www.ebay.com/",
                "https://ebay.com/"
            ],
            "run_at": "document_end",
            "js": ["./index.global.js"],
            "css": ["./style.css"]
        }
    ],
    "permissions": ["storage"],
    "background": {
        "service_worker": "./background.global.js"
    },
    "icons": {
        "128": "logo128.png"
    }
}
